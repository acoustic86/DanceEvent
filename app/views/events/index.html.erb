<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Registration Due Date</th>
      <th>Location Adress</th>
      <th>Rsvp Limit</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.Name %></td>
        <td><%= event.Date %></td>
        <td><%= event.Description %></td>
        <td><%= event.Starts_at %></td>
        <td><%= event.Ends_at %></td>
        <td><%= event.RegistrationDueDate %></td>
        <td><%= event.LocationAdress %></td>
        <td><%= event.rsvpLimit %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

